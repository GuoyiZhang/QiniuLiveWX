<view class="page-body">
<view class="weui-cells__title">请输入播放地址</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="播放地址" bindinput='getInput' />
                </view>
            </view>
        </view>
        
  <view class="page-section tc">
    <live-player id="player" src="{{playURL}}" mode="live"  bindstatechange="statechange" binderror="error" />

    
    <view class="btn-area">
      <button bindtap="bindPlay" class="page-body-button" type="primary">播放</button>
    </view>
  </view>
  <button type='default' bindtap='backBtn'>返回上一页</button>
</view>

